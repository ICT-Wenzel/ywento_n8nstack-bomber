FROM docker.n8n.io/n8nio/n8n:latest

ARG GITHUB_URL
ENV GITHUB_URL=${GITHUB_URL}

USER root

# Git UND curl f√ºr Health-Check
RUN apk add --no-cache git curl

COPY init-workflows.sh /app/init-workflows.sh
RUN chmod +x /app/init-workflows.sh \
    && chown node:node /app/init-workflows.sh \
    && mkdir -p /home/node/.n8n/n8nworkflows \
    && chown -R node:node /home/node/.n8n

USER node
WORKDIR /home/node

ENTRYPOINT ["/app/init-workflows.sh"]